<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title><%= title %></title>
</head>
<body>
 <!------------------------------------------------HEADER-->
 <%- include('_header') %>
 <!--------------------------------------------------HEADER-->
  <h1>Students</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Level</th>
        <th>Email</th>
        <th>View/Edit</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.id %></td>
          <td><%= student.name %></td>
          <td><%= student.level %></td>
          <td><%= student.email %></td>
          <td><a href="/students/<%= student.id %>"><button>View Profile</button></a></td> 
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
